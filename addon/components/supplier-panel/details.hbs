<div class="p-4">
    <ContentPanel @title="Details" @open={{true}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-900">
        {{#if this.isIntegratedSupplier}}
            <div class="integrated-supplier-button border-0 mb-4">
                <div>
                    <img src={{this.supplier.provider_settings.logo}} alt={{this.supplier.provider_settings.code}} class="w-20 h-20" width="80" height="80" />
                </div>
                <div>
                    <h3 class="text-sm font-semibold dark:text-white">{{this.supplier.provider_settings.name}}</h3>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-2 text-xs dark:text-gray-100">
                <div class="field-info-container">
                    <div class="field-name">Sandbox</div>
                    <div class="field-value">{{if this.supplier.sandbox "Yes" "No"}}</div>
                </div>
                <div class="field-info-container">
                    <div class="field-name">Host</div>
                    <div class="field-value">{{n-a this.supplier.host}}</div>
                </div>
                <div class="field-info-container">
                    <div class="field-name">Namespace</div>
                    <div class="field-value">{{n-a this.supplier.namespace}}</div>
                </div>
                {{#if (is-object this.supplier.options)}}
                    {{#each-in this.supplier.options as |key value|}}
                        <div class="field-info-container">
                            <div class="field-name">{{smart-humanize key}}</div>
                            <div class="field-value">{{n-a value}}</div>
                        </div>
                    {{/each-in}}
                {{/if}}
            </div>
        {{else}}
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-2 text-xs dark:text-gray-100">
                <div class="field-info-container">
                    <div class="field-name">Name</div>
                    <div class="field-value">{{n-a this.supplier.name}}</div>
                </div>

                <div class="field-info-container">
                    <div class="field-name">Email</div>
                    <div class="field-value">{{n-a this.supplier.email}}</div>
                </div>

                <div class="field-info-container">
                    <div class="field-name">Phone</div>
                    <div class="field-value">{{n-a this.supplier.phone}}</div>
                </div>

                <div class="field-info-container">
                    <div class="field-name">Website URL</div>
                    <div class="field-value">{{n-a this.supplier.website_url}}</div>
                </div>

                <div class="field-info-container">
                    <div class="field-name">Country</div>
                    <div class="field-value">
                        <CountryName @country={{this.supplier.country}} @showFlag={{true}} />
                    </div>
                </div>

                <div class="field-info-container">
                    <div class="field-name">Status</div>
                    <div class="field-value">
                        <Badge @status={{this.supplier.status}} />
                    </div>
                </div>

                <div class="field-info-container col-span-2">
                    <div class="field-name">Address</div>
                    <div class="field-value">{{n-a this.supplier.address}}</div>
                </div>
            </div>
        {{/if}}
    </ContentPanel>
</div>